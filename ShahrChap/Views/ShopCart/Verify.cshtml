
@{
    ViewBag.Title = "وضعیت پرداخت";
}

<h2>وضعیت پرداخت</h2>

@if (ViewBag.IsSuccess == true)
{
    <div class="alert alert-success">
        <h3>تراکنش شما با موفقیت انجام شد</h3>
        <hr />
        <p>کد پیگیری شما : @ViewBag.RefId</p>
    </div>
}
else
{
<div class="alert alert-danger">
    <h3>تراکنش شما با شکست مواجه شد</h3>
    <p>در صورت کسر وجه از حساب شما تا 72 ساعت آینده به حساب شما برگشت داده می شود!</p>
</div>
}