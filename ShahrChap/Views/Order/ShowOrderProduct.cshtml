@model DataLayer.Products
@using ViewModels
@{
    ViewBag.Title = Model.Title;
}

<section>
    <div class="single-product">
        <div class="container internal-style py-5">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">خانه</a></li>
                <li class="breadcrumb-item"><a href="#">محصولات</a></li>
                <li class="breadcrumb-item active" aria-current="page">چاپ و تکثیر شهر چاپ</li>
            </ol>
            <div class="card-wrapper">
                <div class="card-single-product row">
                    <!-- card left -->
                    <div class="product-imgs col-md-4 col-sm-12 col-xs-12 pull-right">
                        <div class="img-display">
                            <div class="img-showcase">
                                <img src="/Images/ProductImages/@Model.ImageName">
                            </div>
                        </div>
                        @if (Model.Product_Galleries.Any())
                        {
                            <div class="img-select">
                                <div class="img-item img-thumbnail">
                                    <img src="~/Images/ProductImages/@Model.ImageName" class="" alt="تصویر اصلی">
                                </div>
                                @foreach (var item in Model.Product_Galleries)
                                {
                                    <div class="img-item">
                                        <img src="~/Images/ProductImages/@item.ImageName" alt="@item.Title">
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    <!-- card right -->
                    <div class="product-content col-md-8 col-sm-12 col-xs-12">
                        <div class="product-price pull-left">
                            @if (Model.IsExist == true)
                            {
                                <p class="new-price">قیمت: <span>@Model.Price.ToString("#,0") تومان</span></p>
                            }
                            else
                            {
                                <a href="#" class="Price Unavailable">ناموجود</a>
                            }
                        </div>
                        <h2 class="single-product-title">@Model.Title</h2>


                        <div class="product-detail mt-3">
                            @if (Model.Text != null)
                            {
                                <h4>درباره محصول:</h4>
                                <h4>
                                    @Html.Raw(Model.Text)
                                </h4>
                            }
                            @if (Model.Product_Attribute.IsTwoFace == true)
                            {
                                <h6>
                                    پشت و رو
                                </h6>
                            }
                            else
                            {
                                <h6>
                                    یک رو
                                </h6>
                            }
                            <h6>
                                تعداد یک سری: @Model.Product_Attribute.Count
                            </h6>
                            @if (ViewBag.OrderProductFeatures != null)
                            {
                                List<ShowProductFeaturesViewModel> list = ViewBag.OrderProductFeatures;
                                <ul>
                                    @foreach (var item in list)
                                    {
                                        <li> @item.FeatureTitle : <span>@string.Join(" , ", item.Values)</span></li>
                                    }
                                </ul>
                            }
                        </div>
                        <div class="purchase-info">
                            @if (Model.IsExist == true)
                            {
                                <a href="/SendOrder/@Model.ProductID" class="btn">
                                    سفارش طراحی <i class="fas fa-paint-brush"></i>
                                </a>
                            }
                            else
                            {
                                <a class="btn disabled">
                                    ناموجود <i class="fas fa-ban"></i>
                                </a>
                            }
                        </div>
                        <section class="border-radius tags-layer mt-4">
                            @foreach (var item in Model.Tags)
                            {
                                <a href="/Search?q=@item.Tag">@item.Tag</a>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $('.img-select img').click(function () {
        var src = $(this).attr('src');
        $('.img-showcase img').attr('src', src).fadeOut('fast').fadeIn('fast');
    });

</script>