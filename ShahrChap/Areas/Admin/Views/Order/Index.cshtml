@model IEnumerable<DataLayer.Products>

@{
    ViewBag.Title = "محصولات";
}

<h2>لیست محصولات</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">افزودن محصول جدید</a>
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            گروه های این محصول
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsExist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="product_@(item.ProductID)">
            <td>
                <img class="thumbnail" style="margin:2px auto" src="/Images/ProductImages/Thumb/@item.ImageName" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @if (item.Product_Groups.Any())
                {
                    <ol>
                        @foreach (var group in item.Product_Groups)
                        {
                            <li>
                                @group.Order_Groups.GroupTitle
                            </li>
                        }
                    </ol>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsExist)
            </td>
            <td>
                @item.CreateDate.ToString("dddd, dd MMMM yyyy")
            </td>
            <td>
                <a class="btn btn-default btn-xs" href="@Url.Action("ProductFeatures", new { id = item.ProductID })">ویژگی های محصول</a>
                <a class="btn btn-info btn-xs" href="@Url.Action("Gallery", new { id = item.ProductID })">گالری محصول</a>
                <a class="btn btn-warning btn-xs" href="@Url.Action("Edit",new {id=item.ProductID})">ویرایش محصول</a>
                <a class="btn btn-danger btn-xs" onclick="DeleteProduct(@item.ProductID)">حذف محصول</a>
            </td>
        </tr>
    }

</table>

<script>
    function DeleteProduct(id) {
        if (confirm('آیا از حذف این محصول مطمئن هستید؟')) {
            $.get("/Admin/Order/DeleteProduct/" + id, function () {
                $("#product_" + id).hide('slow');
            });
        }
    }
</script>