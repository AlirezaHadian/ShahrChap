@model IEnumerable<DataLayer.Users>

@{
    ViewBag.Title = "مدیریت کاربران";
}

<h2>مدیریت کاربران</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">افزودن کاربر جدید</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles.RoleTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsEmailActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPhoneActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles.RoleTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEmailActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPhoneActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>

            <td>
                <a class="btn btn-warning" href="@Url.Action("Edit", new { id = item.UserID })">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.UserID })">
                    <i class="fas fa-trash"></i>
                </a>
                <a class="btn btn-info" href="@Url.Action("Address", new { id = item.UserID })">
                    <i class="fas fa-map-marker-alt"></i>
                </a>
            </td>
        </tr>

    }

</table>
    