@model IEnumerable<DataLayer.Footer>

@{
    ViewBag.Title = "مدیریت فوتر";
}

<h2>مدیریت فوتر</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">افزودن فوتر جدید</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <a class="btn btn-info btn-sm" href="@Url.Action("Edit", new { id = item.FooterID })">
                <i class="fa fa-fw fa-edit"></i>
            </a>
            <a class="btn btn-danger btn-sm" href=@Url.Action("Delete", new {id = @item.FooterID})>
                <i class="fa fa-fw fa-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
