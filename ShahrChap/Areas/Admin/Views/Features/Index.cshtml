@model IEnumerable<DataLayer.Features>

@{
    ViewBag.Title = "لیست ویژگی ها";
}

<h2>لیست ویژگی ها</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">افزودن ویژگی جدید</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FeatureTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FeatureTitle)
            </td>
            <td>
                <a href="@Url.Action("Edit",new {id=item.FeatureID})" class="btn btn-primary btn-sm">
                    <i class="fa fa-fw fa-edit"></i>
                </a>
                <a href="@Url.Action("Delete",new {id=item.FeatureID})" class="btn btn-danger btn-sm">
                    <i class="fa fa-fw fa-trash"></i>
                </a>
            </td>
        </tr>
    }

</table>

