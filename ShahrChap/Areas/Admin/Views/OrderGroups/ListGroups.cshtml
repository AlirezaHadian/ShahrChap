@model IEnumerable<DataLayer.Order_Groups>

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="group_@item.Order_GroupID">
            <td>
                @Html.DisplayFor(modelItem => item.GroupTitle)
            </td>
            <td>
                <a class="btn btn-warning btn-sm" onclick="Edit(@item.Order_GroupID)">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="btn btn-danger btn-sm" onclick="Delete(@item.Order_GroupID)">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>
    }

</table>
