        //    $("#EndDate").kendoDatePicker();
        //    $("#StartDate").kendoDatePicker();
        //});
        $(document).ready(function () {
            jalaliDatepicker.startWatch();
            //$("#EndDate").pDatepicker();
            //$("#StartDate").pDatepicker();
        });
    </script>
}
